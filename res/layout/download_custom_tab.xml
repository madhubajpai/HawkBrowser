<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_widget_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/download_custom_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/custom_tab_margin"
        android:padding="@dimen/custom_tab_padding"
        android:text="@string/bookmark"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/download_custom_tab_line"
        android:layout_width="@dimen/custom_tab_linewidth"
        android:layout_height="@dimen/custom_tab_lineheight"
        android:layout_gravity="center"
        android:background="@color/tab_widget_line_color" />

</LinearLayout>